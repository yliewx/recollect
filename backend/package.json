{
  "name": "backend",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "type": "module",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx mocha --reporter spec dist/**/*.test.js",
    "start": "node dist/app.js",
    "test:ts": "npm run build:ts && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "build": "npm run build:ts",
    "build:ts": "tsc && tsc-alias",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/sensible": "^6.0.0",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.0.0",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.8",
    "@types/pg": "^8.16.0",
    "c8": "^10.1.2",
    "chai": "^6.2.2",
    "concurrently": "^9.0.0",
    "fastify-tsconfig": "^3.0.0",
    "mocha": "^11.7.5",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "~5.9.2"
  }
}
